{
  "name": "sip-webrtc-client",
  "version": "1.0.0",
  "description": "Home Assistant SIP WebRTC Video Client Add-on",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --coverage --detectOpenHandles --forceExit",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration --coverage --testTimeout=30000",
    "test:watch": "jest --watch",
    "build": "npm run test:unit",
    "health-check": "curl -f http://localhost:8088/health || exit 1",
    "postinstall": "echo 'Installation complete - Puppeteer download skipped for containerized environment'"
  },
  "dependencies": {
    "sip.js": "^0.21.2",
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "home-assistant",
    "addon",
    "sip",
    "webrtc",
    "video-calling",
    "voip"
  ],
  "author": "Home Assistant Community",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ahmed9190/sip-webrtc-client.git"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "testTimeout": 10000,
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
  }
}